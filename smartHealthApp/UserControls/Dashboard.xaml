                      Background="AliceBlue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Flyout on the left -->
        <Controls:FlyoutsControl x:Name="flyoutIcon" Background="Transparent">
            <Controls:Flyout x:Name="leftNavigationIcons" Position="Left" Header="Navigation">
                <StackPanel>
                    <TextBlock Text="Static Data 1" Width="100" Height="60"/>
                    <TextBlock Text="Static Data 2" Width="100" Height="60"/>
                    <TextBlock Text="Static Data 3" Width="100" Height="60"/>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>

