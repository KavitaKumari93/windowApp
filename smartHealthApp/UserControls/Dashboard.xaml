        <StackPanel Grid.Column="1">
            <TextBlock Text="Main Content Area" />
            <Button Content="Open Left Flyout" Command="{Binding ShowLeftFlyoutCommand}" />
            <Button Content="Open Right Flyout" Command="{Binding ShowRightFlyoutCommand}" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>

   
