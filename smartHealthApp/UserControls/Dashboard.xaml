                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:smartHealthApp.UserControls"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
                      xmlns:viewmodel="clr-namespace:smartHealthApp.ViewModel;assembly=smartHealthApp.ViewModel"
                      d:DataContext="{d:DesignInstance Type=viewmodel:DashboardViewModel}"
